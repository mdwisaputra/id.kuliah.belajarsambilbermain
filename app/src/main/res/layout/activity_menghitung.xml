<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menghitung" android:background="#665F5F">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="110dp" tools:srcCompat="@drawable/main"
                android:id="@+id/imageView8" android:layout_marginTop="10dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="462dp" android:layout_marginTop="20dp" android:background="#3E4981">
            <TextView
                    android:text="BERHITUNG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="35sp"
                    android:textStyle="bold" android:gravity="center" android:textColor="#F89C18"
                    android:layout_marginTop="20dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="84dp" android:layout_marginTop="10dp">
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="84dp" android:layout_marginTop="10dp">
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="84dp" android:layout_marginTop="10dp">
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="84dp" android:layout_marginTop="10dp">
            </LinearLayout>
        </LinearLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp" app:srcCompat="@android:drawable/ic_menu_revert"
                android:id="@+id/imageView32" android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>