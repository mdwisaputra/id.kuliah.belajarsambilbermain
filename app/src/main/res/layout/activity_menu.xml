<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menu" android:background="#665F5F">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp" tools:srcCompat="@drawable/main"
                android:id="@+id/imageView9" android:layout_marginTop="80dp" app:srcCompat="@drawable/main"/>
        <Button
                android:text="MEMBACA"
                android:layout_width="280dp"
                android:layout_height="wrap_content" android:id="@+id/btn_membaca" android:background="#3E4981"
                android:layout_marginTop="40dp" android:textSize="30sp" android:layout_gravity="center"
                android:textColor="#F89C18"/>
        <Button
                android:text="MENGHITUNG"
                android:layout_width="281dp"
                android:layout_height="wrap_content" android:id="@+id/btn_menghitung" android:layout_marginTop="40dp"
                android:textSize="30sp" android:background="#3E4981"
                android:layout_gravity="center" android:textColor="#F89C18"/>
        <Button
                android:text="BAHASA INGGRIS"
                android:layout_width="281dp"
                android:layout_height="wrap_content" android:id="@+id/btn_ing" android:background="#3E4981"
                android:layout_marginTop="40dp" android:textSize="30sp"
                android:layout_gravity="center" android:textColor="#F89C18"/>
        <Button
                android:text="BERNYANYI"
                android:layout_width="278dp"
                android:layout_height="wrap_content" android:id="@+id/btn_bernyanyi" android:background="#3E4981"
                android:layout_marginTop="40dp" android:textSize="30sp"
                android:layout_gravity="center" android:textColor="#F89C18"/>
    </LinearLayout>
</RelativeLayout>