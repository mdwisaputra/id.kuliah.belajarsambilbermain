<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="#665F5F">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp" tools:srcCompat="@drawable/main"
                android:id="@+id/imageView" android:layout_marginTop="150dp"/>
        <Button
                android:text="PLAY"
                android:layout_width="181dp"
                android:layout_height="wrap_content" android:id="@+id/btn_play" android:layout_marginTop="50dp"
                android:layout_marginLeft="113dp" android:background="#3E4981" android:textSize="25sp"
                android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>